    });
});
</script>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.min.js"></script>
<script>
$(document).ready(function(){
    $(".app-theme").owlCarousel({
        responsiveClass:true,
        navText: ["",""],
        nav:true,
        responsive:{
            800:{
                items:4
            },
            569:{
                items:3
            },
            0:{
                items:1
            },
            1200:{
                items:5
            }
        }
    });

    $(".timolico-histories-carousel, .travelers-histories-carousel").owlCarousel({
        responsiveClass:true,
        navText: ["",""],
        nav:true,
        responsive:{
            800:{
                items:3
            },
            569:{
                items:2
            },
            0:{
                items:1
            },
            1200:{
                items:3
            }
        }
    });
    

    $(".timolico-persons-carousel, .travelers-persons-carousel").owlCarousel({
        responsiveClass:true,
        navText: ["",""],
        nav:true,
        responsive:{
            800:{
                items:3
            },
            569:{
                items:2
            },
            0:{
                items:1
            },
            1200:{
                items:3
            }
        }
    });

    $(".tab .tablinks").click(function() {
        var tab_content_id = "#" + $(this).parent().data('target');

        $(this).parent().children(".tablinks").removeClass("active");
        $(this).addClass("active");

        var tab_content = $(tab_content_id);
        tab_content.children().removeClass("active");
        var active_id = "#" + $(this).data('target');
        var active_tab = $(tab_content_id+ " " +active_id);
        active_tab.addClass("active");
    });

    $('.content-games').owlCarousel({
            responsiveClass:true,
            nav:true,
            navText: ["",""],
            responsive:{
                800:{
                    items:3
                },
                569:{
                    items:2
                },
                0:{
                    items:1
                },
                1200:{
                    items:4
                }
            }
        });
});


</script>